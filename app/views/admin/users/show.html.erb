<div class="header">
  <h3>User information</h3>
</div>

<div class="main_body">
  <p>Name: <%= @user.name %></p>
  <p>Email: <%= @user.email %></p>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Detail</th>
        <th>Deadline</th>
        <th>Priority</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'back', admin_users_path %>
