<h3>Admin page</h3>

<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Total task</th>
		<th>Admin</th>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td><%= user.name %></td>
		<td><%= user.email %></td>
		<td><%= user.tasks.count %></td>
		<td><%= user.is_admin %></td>
		<td><%= link_to 'Show', admin_user_path(user.id) %></td>
		<td><%= link_to 'Edit', edit_admin_user_path(user.id) %></td>
		<td><%= link_to 'Destroy', admin_user_path(user.id), method: :delete %></td>
		<% if user.is_admin? %>
		  <td><%= link_to 'Delete admin', admin_user_path(user, is_admin: "false") %></td>
		<% else %>
		  <td><%= link_to 'Make admin', admin_user_path(user, is_admin: "true"), method: :put %></td>
		<% end %>
	</tr>
	<% end %>
</table>

<%= link_to 'create user', new_admin_user_path %>
