<div class="error_explaination">
	<% if @label.errors.any? %>
	<%= pluralize(@label.errors.count, 'error') %>
	<ul>
		<% @label.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
	<% end %>
</div>

<%= form_with(model: @label, local: true) do |form| %>

<div class="task">
	<%= form.label :name %>
	<%= form.text_field :name %>
</div>

<div class="submit">
	<%= form.submit "create label" %>
</div>
<% end %>
